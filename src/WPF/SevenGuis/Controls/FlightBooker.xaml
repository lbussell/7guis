<UserControl x:Class="SevenGuis.Controls.FlightBooker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SevenGuis.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="128" d:DesignWidth="128">
    <StackPanel>
        <ComboBox Name="FlightComboBox" SelectionChanged="FlightComboBox_SelectionChanged">
            <ComboBoxItem Name="oneway" IsSelected="True">One-way flight</ComboBoxItem>
            <ComboBoxItem Name="return">Return flight</ComboBoxItem>
        </ComboBox>
        <TextBox Name="OriginFlightTextBox" TextChanged="OriginFlightTextBox_TextChanged"/>
        <TextBox Name="ReturnFlightTextBox" TextChanged="ReturnFlightTextBox_TextChanged"/>
        <Button Name="BookFlightButton" Content="Book" Click="BookFlightButton_Click"/>
    </StackPanel>
</UserControl>
