<UserControl x:Class="SevenGuis.Controls.TempConverter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SevenGuis.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <WrapPanel>
        <TextBox Name="CelsiusTextBox" TextChanged="CelsiusTextBox_TextChanged" Grid.Column="0" Grid.Row="0" Width="64" Text="0"></TextBox>
        <Label Content="Celsius"/>
        <Label Content="="/>
        <TextBox Name="FahrenheitTextBox" TextChanged="FahrenheitTextBox_TextChanged" Grid.Column="0" Grid.Row="0" Width="64" Text="0"></TextBox>
        <Label Content="Fahrenheit"/>
    </WrapPanel>
</UserControl>
